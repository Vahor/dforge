{
  "$schema": "https://raw.githubusercontent.com/tauri-apps/tauri/dev/tooling/cli/schema.json",
  "build": {
    "beforeDevCommand": "bun run dev",
    "beforeBuildCommand": "bun run build",
    "frontendDist": "../dist",
    "devUrl": "http://localhost:1420"
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "resources": [
      "resources/*"
    ]
  },
  "productName": "dtools",
  "version": "0.0.0",
  "identifier": "fr.vahor.dtools",
  "plugins": {},
  "app": {
    "macOSPrivateApi": true,
    "security": {
      "csp": null,
      "assetProtocol": {
        "scope": [
          "**"
        ]
      }
    },
    "windows": [
      {
        "title": "dtools",
        "fullscreen": false,
        "minHeight": 500,
        "minWidth": 768,
        "height": 750,
        "width": 1400,
        "visible": false,
        "transparent": true,
        "titleBarStyle": "Overlay",
        "hiddenTitle": true,
        "alwaysOnTop": true,
        "url": "dashboard/home"
      }
    ]
  }
}
